{% extends 'base.html.twig' %}
{% block main %}
    <div class="wrapper">
        <form  name="appbundle_project" class="project-create" method="post">
            <div class="create-header">
                Delete Project
            </div>
            <div>
                <input type="hidden" id="appbundle_project__token" name="appbundle_project[_token]" value="{{ project.id }}">
            </div>
            <div class="create-title">
                <div class="create-title-label">Title</div>
                <input class="create-title-content"name="appbundle_project[title]" value="{{ project.title }}" disabled="disabled"/>
            </div>
            <div class="create-description">
                <div class="create-description-label">Description</div>
                <textarea rows="3" class="create-description-content" name="appbundle_project[description]"
                          disabled="disabled">{{ project.description }}</textarea>
            </div>
            <div class="create-budget">
                <div class="create-budget-label">Budget</div>
                <input type="number" min="0" class="create-budget-content" name="appbundle_project[budget]" value="{{ project.budget }}"
                       disabled="disabled"/>
            </div>
            <div class="create-button-holder">
                {{ form_start(delete_form) }}
                <button type="submit" class="submit-button">Delete Project</button>
                {{ form_end(delete_form) }}
                <a type="button" href="/" class="back-button">Back</a>
            </div>

            {{ form_row(delete_form._token) }}
        </form>
    </div>
{% endblock %}


