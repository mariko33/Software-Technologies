{% extends 'base.html.twig' %}
{% block main %}
    <div class="wrapper">
        <form name="appbundle_project" class="project-create" method="post">
            <div class="create-header">
                Create Project
            </div>
            <div class="create-title">
                <div class="create-title-label">Title</div>
                <input class="create-title-content" id="appbundle_project_title" name="appbundle_project[title]" />
            </div>
            <div class="create-description">
                <div class="create-description-label">Description</div>
                <textarea rows="3" class="create-description-content" id="appbundle_project_description" name="appbundle_project[description]"></textarea>
            </div>
            <div class="create-budget">
                <div class="create-budget-label">Budget</div>
                <input type="number" min="0" class="create-budget-content" id="appbundle_project_budget" name="appbundle_project[budget]" />
            </div>
            <div class="create-button-holder">
                <button type="submit" class="submit-button">Create Project</button>
                <a type="button" href="/" class="back-button">Back</a>
            </div>

            {{ form_row(form._token) }}
        </form>
    </div>
{% endblock %}








